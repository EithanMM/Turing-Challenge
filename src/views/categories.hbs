<div id="loadingDiv" class="loading"><img style="margin-top: 100px; margin-left: 500px;" width="200" height="200"
        src="/images/Reload-circle.gif"></div>

<div id="container" class="container">
    <div class="row">
        {{#each categories}}
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">{{this.name}}</h1>
                </div>
                <div class="card-body">
                    <p>{{this.description}}</p>
                </div>
                <div class="card-footer">
                    <div class="btnBox">
                        <a class="btn btn-primary" href="/productsFromCategory/{{this.category_id}}?page=1">See
                            products</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>